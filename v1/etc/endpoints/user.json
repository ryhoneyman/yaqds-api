{
   "/user": {
      "GET": {
         "name": "List Users",
         "description": "",
         "controller": "UserController",
         "function": "listUsers",
         "category": "Users",
         "filter": {},
         "param": { 
            "id":       { "required": false, "constraint": "integer", "description": "List users by id.", "default": null },
            "username": { "required": false, "constraint": "string", "description": "List users starting with this string.", "default": null },
            "max":      { "required": false, "constraint": "integer", "description": "Limit maximum number of users returned.", "default": null } 
         }
      },
      "POST": {
         "name": "Create User",
         "description": "",
         "controller": "UserController",
         "function": "createUser",
         "category": "Users",
         "filter": {},
         "param": {},
         "body" : { 
            "firstname": { "required": true, "constraint": "string", "description": "The first name of the user." },
            "lastname": { "required": true, "constraint": "string", "description": "The last name of the user." }
         }
      }
   },
   "/user/id/{id}": {
      "GET": {
         "name": "Get User Details",
         "description": "",
         "controller": "UserController",
         "function": "getUser",
         "category": "Users",
         "filter": { "id": { "required": true, "constraint": "string", "description": "The unique identifier for the user." } },
         "param": {}
      },
      "PUT": {
         "name": "Update User Details",
         "description": "",
         "controller": "UserController",
         "function": "updateUser",
         "category": "Users",
         "filter": { "id": { "required": true, "constraint": "string", "description": "The unique identifier for the user." } },
         "param": {}
      },
      "DELETE": {
         "name": "Delete User",
         "description": "",
         "controller": "UserController",
         "function": "deleteUser",
         "category": "Users",
         "filter": { "id": { "required": true, "constraint": "string", "description": "The unique identifier for the user." } },
         "param": {}
      }
   }
}
